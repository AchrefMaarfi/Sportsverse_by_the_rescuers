
{% extends 'home/index.html.twig' %}

{% block title %}Log in!
{% endblock %}
{% block header %}{% endblock %}

{% block body %}

	<section class="login_box_area section_gap">

		<div class="container">
			<div class="row">
				<div class="col-lg-6">
					<div class="login_box_img">
						<img class="img-fluid" src="{{asset('img/login.jpg')}}" alt="">
						<div class="hover">
							<h4>welcome to sportsverse</h4>
							<p>******hello in our application sportsverse ******</p>
							<a class="primary-btn" href="{{path('app_register')}}">Create an Account</a>
						</div>
					</div>
				</div>
				<div class="col-lg-6">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					<form method="post">
						<div class="login_form_inner">
							<h3>Log in to enter</h3>
							<div class="row login_form" id="contactForm">

								<div class="col-md-12 form-group">
									<label for="inputEmail">Email</label>
									<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="email" autofocus></div>

								<div class="col-md-12 form-group">
									<label for="inputPassword">Password</label>
									<input type="password" name="password" id="inputPassword" class="form-control" placeholder="password" autocomplete="current-password">
								</div>
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


								<button class="primary-btn" type="submit">
									Sign in
								</button>

								<div class="col-md-12 form-group">


									<a href="{{path('forgot_password')}}">Forgot Password?</a>
								</div>

							</div>

						</div>
					</form>
				</div>
			</div>
		</div>
	</section>
{% endblock %}
{% block footer %}{% endblock %}
