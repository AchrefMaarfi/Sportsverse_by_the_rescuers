{% extends 'front.html.twig' %}

{% block title %}Add cv
{% endblock %}

{% block banner_content %}

	<div class="col-lg-6" style="margin-top: 150px; justify-content: center; align-items: center;">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Ajouter une activite</h5>

				{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
				<label for="input-text" class="col-sm-4 col-form-label">Nom</label>
				<div class="col-sm-10">
					{{form_widget(form.nom,{
						'attr' :{'class' : 'form-control'},})}}
					{{form_errors(form.nom,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>

				<label for="input-text" class="col-sm-4 col-form-label">Description</label>
				<div class="col-sm-10">
					{{form_widget(form.description,{
								'attr' :{'class' : 'form-control'},
							})}}
					{{form_errors(form.description,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>
				<label for="input-text" class="col-sm-4 col-form-label">Type</label>

				<div class="col-sm-10">

					{{form_widget(form.type,{
						'attr' :{'class' : 'form-control'},})}}
					{{form_errors(form.type,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>
				<label for="input-text" class="col-sm-3 col-form-label">Cv</label>

				<div class="col-sm-10">

					{{form_widget(form.cvs,{
						'attr' :{'class' : 'form-control'},})}}
					{{form_errors(form.cvs,{
						'attr' :{'class' : 'text-danger'},})}}
				</div>
				<div class="text-center">
					<br>
					{{ form_widget(form) }}
					<button type="submit" class="btn btn-primary">
						{{ button_label|default('Ajouter') }}
					</button>
				</div>
				{{form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
{% block body %}{% endblock %}
