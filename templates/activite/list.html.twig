{% extends 'front.html.twig' %}

{% block title %}Users
{% endblock %}

{% block banner_content %}
	<div class="card" style="margin-top: 160px; justify-content: center; align-items: center;">
		<div class="card-body">
			<h5 class="card-title" style="display: flex; position: absolute;">Activites list</h5>
			<button class="justify-content-end btn" style="display: flex; position: relative; left: 80%; border-radius: 10px;">
				<a href="{{ path ('add_activite')}}">
					<i class="bx bxs-plus-square"></i>List activite</a>
			</button>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">nom</th>
						<th scope="col">description</th>
						<th scope="col">type</th>
						<th scope="col">Action</th>

						{# <th scope="col">user_id</th> #}
					</tr>
				</thead>
				<tbody>
					{% for act in activites %}

						<tr>
							<td>{{ act.nom }}</td>
							<td>{{ act.description }}</td>
							<td>{{ act.type }}</td>
							<td>
								<button class="btn">
									<a href="{{ path ('show_activite', {'id': act.id})}}">
										<i class="bx bxs-show"></i>Show</a>
								</button>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
{% block body %}{% endblock %}
