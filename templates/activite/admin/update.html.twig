{% extends 'back.html.twig' %}

{% block title %}Users
{% endblock %}

{% block navigation %}
	<li class="breadcrumb-item">
		<a href="{{ path ('app_dashboard') }}">Home</a>
	</li>
	<li class="breadcrumb-item active">Modifier Activites</li>
{% endblock %}

{% block body %}
	<div class="col-lg-6">

		<div class="card">
			<div class="card-body">
				<h5 class="card-title">Modifier les activit√©s</h5>

				<!-- Vertical Form -->
				<div class="row g-3">
					{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
					<div class="col-12">
						{{form_label(form.nom, 'Nom')}}
						{{form_widget(form.nom,{
								'attr' :{
									'class' : 'form-control'
								},
							})}}
						{{form_errors(form.nom,{
						'attr' :{'class' : 'text-danger'},})}}
					</div>
					<div class="col-12">
						{{form_label(form.description, 'Description')}}
						{{form_widget(form.description,{
								'attr' :{
									'class' : 'form-control'
								},
							})}}
						{{form_errors(form.description,{
						'attr' :{'class' : 'text-danger'},})}}
					</div>
					<div class="col-12">
						{{form_label(form.type, 'Type')}}
						{{form_widget(form.type,{
								'attr' :{
									'class' : 'form-control'
								},
							})}}
						{{form_errors(form.type,{
						'attr' :{'class' : 'text-danger'},})}}
					</div>
					<div class="col-sm-10">
						<label for="input-text" class="col-sm-4 col-form-label">CV</label>

						{{form_widget(form.cvs,{
						'attr' :{'class' : 'form-control'},})}}
						{% if form.cvs is null %}
							{{ form_errors(form) }}
						{% endif %}
						{{form_errors(form.cvs,{
						'attr' :{'class' : 'text-danger'},})}}
					</div>
					<div class="text-center">
						<br>
						{{ form_widget(form) }}
						<button type="submit" class="btn btn-primary">
							{{ button_label|default('Modifier') }}
						</button>
					</div>
					{{form_end(form)}}
				</div>
				<!-- Vertical Form -->

			</div>
		</div>
	</div>
{% endblock %}
