{% extends 'dashboard/index.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Role</th>
				<td>{{ user.role ? user.role|join(', ') : '' }}</td>
			</tr>
			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>IsVerified</th>
				<td>{{ user.etat ? 'Yes' : 'No' }}</td>
			</tr>

			<tr>
				<th>adresse</th>
				<td>{{ user.adresse}}</td>
			</tr>
			<tr>
				<th>num</th>
				<td>{{ user.getNumTel() }}</td>
			</tr>
			{# <tr>
						                <th>Naissance</th>
						                <td>{{ user.naissance ? user.naissance|date('Y-m-d') : '' }}</td>
						            </tr> #}
